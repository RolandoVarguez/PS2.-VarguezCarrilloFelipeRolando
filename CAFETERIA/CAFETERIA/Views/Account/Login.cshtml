@using CAFETERIA.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";

}

<link href="/Content/Dashboard/css/sb-admin-2.min.css" rel="stylesheet">


<div class="bg-white">
    <br />
    <div class="masthead bg-white">
        <div class="masthead-content space">
            <br />
            <div class="card container border-dark" style="width:25rem">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <br />
                        <div class="card-header bg-dark"></div>
                        @Html.AntiForgeryToken()
                        <br />
                        <center>  <img src="~/Content/Inicio/img/logo.jpg" alt="Alternate Text" width="150" height="100" /></center>
                        <p></p>
                        <center><h4 class="col-md-12"><b>Iniciar Sesion.</b></h4></center>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="col-md-12">Correo Electronico:</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Contraseña:</label>
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    <label class="col-md-12">Recuerdame</label>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Iniciar Sesion" class="btn btn-outline-success btn-lg btn-block" />
                                <a href="@Url.Action("Index","Home")" class="btn btn-danger btn-lg btn-block">Volver a Inicio</a>



                            </div>
                        </div>
                        <br />
                        <center>
                            <div class="col-md-offset-2 col-md-10">
                                <p>¿Aun no tienes una cuenta?</p>
                                <a href="@Url.Action("Register","Account")" class="btn btn-outline-info">Registrate</a>
                            </div>
                        </center>
                        <br />

                        <div class="card-footer bg-dark"></div>
                        <br />

                    }
                </section>
            </div>

        </div>


        <!--
        <div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
            -->
    </div>
</div>


    <script src="/Content/Dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Content/Dashboard/js/sb-admin-2.min.js"></script>
<!-- Bootstrap core JavaScript-->
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.min.js"></script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}