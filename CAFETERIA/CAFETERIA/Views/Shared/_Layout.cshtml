@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Inventario - STEAMER</title>

    <!-- Custom fonts for this template-->
    <link href="/Content/Dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Content/Dashboard/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        @if (User.Identity.IsAuthenticated)
        {
        <ul class="navbar-nav bg-gradient-success sidebar sidebar-dark accordion" id="accordionSidebar">


            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center bg-gradient-success" href="@Url.Action("Index", "Principal")">

                <div class="sidebar-brand-text mx-3 text-white">Inventario STEAMER </div>

            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("ViewProfile", "Users")">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Mi Perfil</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Opciones
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "Principal")">
                    <i class="fas fa-fw fa-home"></i>
                    <span class="text-white"><b>Centro de Control</b></span>
                </a>

            </li>



            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "Products")">
                    <i class="fas fa-fw fa-list"></i>
                    <span class="text-white"><b>Lista de Productos</b></span>
                </a>

            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Create", "Products")">
                    <i class="	far fa-edit"></i>
                    <span class="text-white"><b>Crear un Producto</b></span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "Orders")">
                    <i class="fas fa-fw fa-list"></i>
                    <span class="text-white"><b>Lista de Ordenes</b></span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">


            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        }








        <!-- Sidebar -->
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">


            <div id="content">

               @if (User.Identity.IsAuthenticated)
                 {
                   <nav class="navbar navbar-expand navbar-dark bg-dark topbar mb-2 static-top text-white">
                   
                            <center><p class="col-md-12"><b>CONTROL DE INVENTARIO PARA TU NEGOCIO</b></p></center>

                            <!-- Topbar Navbar -->
                        <ul class="navbar-nav ml-auto">

                                <div class="topbar-divider d-none d-sm-block"></div>



                        
                                <a class="dropdown-item bg-transparent" href="#" data-toggle="modal" data-target="#logoutModal">
                           
                                     <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2  text-white"></i>
                                     <b class="text-white bg-transparent">Cerrar Sesion</b>
                            
                                </a>



                        </ul>

                    </nav>
                }




                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">




                    @RenderBody()


                </div>
                <!-- /.container-fluid -->

            </div>

            <!-- Main Content -->
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; by Rolando Varguez - STEAMER COFFEE</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title" id="exampleModalLabel">
                        <h3><b class="col-md-12 text-justify">Cierre de Sesion. </b></h3>
                        <hr />
                        <br />
                        <div class="modal-body col-md-12">Selecciona "Cerrar Sesion" si estas seguro de querer cerrar la sesion actual.</div>
                    </div>
                </div>

                <div class="modal-footer">


                    <button class="btn btn-warning text-white" type="button" data-dismiss="modal">Cancelar</button>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right btn btn-danger text-white" }))
                    {
                        @Html.AntiForgeryToken()

                        <ul class="nav navbar-nav navbar-right">
                            @*
                                <li class="REPA1 text-white">
                            *@

                            <li><a href="javascript:document.getElementById('logoutForm').submit()" class="text-white">Cerrar Sesion</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>



    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Content/Dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Content/Dashboard/js/sb-admin-2.min.js"></script>


    @RenderSection("scripts", required: false)
</body>

</html>
