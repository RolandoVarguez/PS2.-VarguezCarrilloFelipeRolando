@model IEnumerable<CAFETERIA.Models.Product>


@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Nuestros Productos</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/Productos/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="/Content/Productos/css/landing-page.min.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/Content/Inicio/img/logo.jpg" alt="Alternate Text" width="70" height="70" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse font-weight-bold" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="@Url.Action("Index", "Home")">Pagina Principal <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link active" href="@Url.Action("Products","Home")">Nuestros Productos</a>
                <a class="nav-item nav-link active" href="@Url.Action("Login","Account")">Empleados</a>
                <a class="nav-item nav-link active" href="@Url.Action("Contact","Home")">Contactanos</a>

            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <section>
        <p></p>
        <h1 class="text-center bg-dark text-white">DALE UN VISTASO A NUESTROS PRODUCTOS</h1>
        <p></p>
    </section>

    <!-- DESTACADOS -->

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/Productos/img/cafe1.jpg" alt="First slide" height="450">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/Productos/img/frappe.jpg" alt="Second slide" height="450">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/Productos/img/cafe2.jpg" alt="Third slide" height="450">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" height="600">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" height="600">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>




    <!--SECTION 2-->

    <section>
        <p></p>
        <h1 class="text-center bg-dark text-white">Nuestro Catalogo </h1>
        <p></p>
    </section>

    <!--LISTA DE PRODUCTOS-->

    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-xl-3 col-md-3 mb-4 container">

                    <div class="card border-bottom-danger shadow h-100 py-2" style="width: 18rem;">
                        <div class="card-header bg-dark"> </div>
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">

                                    <div class="text-xs font-weight-bold text-dark text-center mb-1"><h2>@item.ProductName</h2></div>
                                    <p></p>
                                    <div class="h5 mb-0 font-weight-bold text-danger"><p class="text-dark">Precio: @item.Price MXN</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-store fa-2x text-gray-300"></i>
                                </div>

                                @if (item.Status == "DISPONIBLE")
                                {
                                    <div class="h5 mb-0 font-weight-bold text-success text-center">Estado: @item.Status</div>

                                }

                                @if (item.Status == "AGOTADO")
                                {
                                    <div class="h5 mb-0 font-weight-bold text-danger">Estado: @item.Status</div>
                                }

                            </div>
                        </div>

                        <center>

                            @Html.ActionLink("Detalles", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-info" })
                            &nbsp;&nbsp;&nbsp;&nbsp;


                            @if (item.Status == "DISPONIBLE")
                            {

                                @Html.ActionLink("Ordenar", "Create", "Orders", new { id = item.ProductID }, new { @class = "btn btn-success" })
                            }

                            @if (item.Status == "AGOTADO")
                            {
                                @Html.ActionLink("Ordenar", "Create", "Orders", new { id = item.ProductID }, new { @class = "btn btn-success disabled" })
                            }



                        </center>
                        <br />
                        <div class="card-footer bg-dark"> </div>
                    </div>
            </div>
        }
    </div>



    <!-- FOOTER -->

    <footer class="footer text-faded bg-dark text-center py-5 text-white">
        <div class="container">
            
            <p class="m-0 small">Copyright &copy;  by Rolando Varguez - STREAMER COFFEE 2020</p>
        </div>
    </footer>






    <script src="/Content/Inicio/vendor/jquery/jquery.min.js"></script>
    <script src="/Content/Inicio/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>




</body>




</html>
